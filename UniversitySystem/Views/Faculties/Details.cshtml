@model UniversitySystem.Models.Faculties.FacultyViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                Subjects
            </th>

        </tr>
        @foreach (var studie in ViewBag.Studies)
        {
            <tr>
                <td>

                    @studie.Name

                </td>
            </tr>
        }

    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
