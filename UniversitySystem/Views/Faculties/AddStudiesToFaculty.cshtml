@model UniversitySystem.Models.JoiningModels.FacultyStudies

@{
    ViewData["Title"] = "AddStudiesToFaculty";
}

<h1>Add Studie to a Faculty</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudiesToFaculty">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class="form-control">
                    @foreach (var faculty in ViewBag.Faculties)
                    {
                        <option value="@faculty.Id">@faculty.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StudieId" class="control-label"></label>
                <select asp-for="StudieId" class="form-control">
                    @foreach (var studie in ViewBag.Studies)
                    {
                        <option value="@studie.Id">@studie.Name</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
